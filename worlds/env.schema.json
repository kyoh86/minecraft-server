{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./env.schema.json",
  "title": "Minecraft world.env.yml schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "deletable"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9_\\-]+$",
      "description": "Multiverse world name"
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "description": "Mainhall gate label text (optional, defaults to name)",
      "default": "<name>"
    },
    "display_color": {
      "oneOf": [
        { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        { "enum": ["black", "dark_blue", "dark_green", "dark_aqua", "dark_red", "dark_purple", "gold", "gray", "dark_gray", "blue", "green", "aqua", "red", "light_purple", "yellow", "white"] }
      ],
      "description": "Mainhall gate label color (optional, defaults to gold)",
      "default": "gold"
    },
    "world_type": {
      "type": "string",
      "enum": ["normal", "flat", "amplified", "largebiomes"],
      "description": "World type for mv create -t (optional, defaults to normal)",
      "default": "normal"
    },
    "seed": {
      "oneOf": [
        { "type": "integer" },
        { "type": "string", "minLength": 1 }
      ],
      "description": "Root seed used by mv create -s. Dimension seed priority: dimensions.<dim>.seed > seed > random",
      "default": "<random>"
    },
    "dimensions": {
      "type": "object",
      "additionalProperties": false,
      "anyOf": [
        { "required": ["nether"] },
        { "required": ["end"] }
      ],
      "properties": {
        "nether": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "pattern": "^[a-z0-9_\\-]+$",
              "description": "Managed nether world name (optional, defaults to <name>_nether)",
              "default": "<name>_nether"
            },
            "seed": {
              "oneOf": [
                { "type": "integer" },
                { "type": "string", "minLength": 1 }
              ],
              "description": "Seed used by nether world create/import (optional). Priority: dimensions.nether.seed > root seed > random",
              "default": "<root.seed>"
            }
          }
        },
        "end": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1,
              "pattern": "^[a-z0-9_\\-]+$",
              "description": "Managed end world name (optional, defaults to <name>_the_end)",
              "default": "<name>_the_end"
            },
            "seed": {
              "oneOf": [
                { "type": "integer" },
                { "type": "string", "minLength": 1 }
              ],
              "description": "Seed used by end world create/import (optional). Priority: dimensions.end.seed > root seed > random",
              "default": "<root.seed>"
            }
          }
        }
      }
    },
    "deletable": {
      "type": "boolean",
      "description": "Whether this world can be regenerated/deleted by world commands"
    }
  }
}
