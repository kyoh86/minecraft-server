{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./env.schema.json",
  "title": "Minecraft world.env.yml schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "environment",
    "world_type",
    "seed",
    "deletable"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]+$",
      "description": "Multiverse world name"
    },
    "environment": {
      "type": "string",
      "enum": ["normal", "nether", "the_end"],
      "description": "World environment for mv create/import"
    },
    "world_type": {
      "type": "string",
      "enum": ["normal", "flat", "amplified", "largebiomes"],
      "description": "World type for mv create -t"
    },
    "seed": {
      "oneOf": [
        { "type": "integer" },
        { "type": "string" }
      ],
      "description": "Seed used by mv create -s (empty string means random seed)"
    },
    "deletable": {
      "type": "boolean",
      "description": "Whether this world can be regenerated/deleted by world commands"
    }
  }
}
