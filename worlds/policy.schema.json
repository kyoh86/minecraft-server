{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./policy.schema.json",
  "title": "Minecraft world.policy.yml schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9_\\-]+$",
      "description": "World name this policy targets"
    },
    "mv_set": {
      "type": "object",
      "description": "Key-value pairs passed to `mv modify <world> set <key> <value>`",
      "additionalProperties": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
